{
	"private": true,
	"repository": "https://github.com/approxit/turlacz",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"lint": "eslint . --ext .ts",
		"compile": "npm run compile:dice && npm run compile:ts",
		"compile:dice": "pegjs -o src/adapters/pegjs/dice.cjs src/adapters/pegjs/dice.pegjs",
		"compile:ts": "tsc",
		"prestart": "npm run compile",
		"start": "node --experimental-modules --es-module-specifier-resolution=node dist/index.js",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"pretests": "npm run compile",
		"tests": "mocha --recursive tests/",
		"clean": "rimraf dist"
	},
	"devDependencies": {
		"@discordjs/builders": "^0.12.0",
		"@discordjs/rest": "^0.3.0",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"discord-api-types": "^0.27.2",
		"discord.js": "^13.6.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.3.0",
		"mocha": "^9.2.0",
		"mongodb": "^4.3.1",
		"pegjs": "^0.11.0-master.f69239d",
		"prettier": "^2.5.1",
		"typescript-memoize": "^1.1.0"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true,
			"mocha": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"project": "tsconfig.json",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"@typescript-eslint/no-explicit-any": "off"
		}
	},
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"arrowParens": "avoid",
		"useTabs": true,
		"tabWidth": 4
	}
}
